<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_logo"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/imgicono"
        android:background="@color/azul_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo"/>

    <com.lusfold.spinnerloading.SpinnerLoading
        android:id="@+id/spinnerloading"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="@+id/imgicono"
        app:layout_constraintStart_toStartOf="@+id/imgicono"
        app:layout_constraintTop_toBottomOf="@+id/imgicono" />

</androidx.constraintlayout.widget.ConstraintLayout>