<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gymOwner.actCreationActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="@string/crear_actividad"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etIdActividad"
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="@string/id_actividad"
                android:inputType="textPersonName"
                android:maxLength="9"
                android:textSize="18sp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_dni_selected"
                android:background="@drawable/custom_edit_text"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:ems="10"
                android:hint="@string/nombre"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_name_selected"
                android:background="@drawable/custom_edit_text"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                />

            <EditText
                android:id="@+id/etAforoMax"
                android:layout_width="match_parent"
                android:ems="10"
                android:hint="@string/aforo_maximo"
                android:inputType="date"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_date_selector"
                android:background="@drawable/custom_edit_text"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"                >

                <Button
                    android:id="@+id/bSelectHoraA"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/custom_horaa_selected"
                    android:onClick="dataPickerDialogHoraA" />

                <EditText
                    android:id="@+id/etHoraA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="true"
                    android:inputType="textPersonName"
                    android:clickable="false"
                    android:hint="@string/hora_de_apertura" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"     >

                <Button
                    android:id="@+id/bSelectHoraC"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button"
                    android:drawableLeft="@drawable/custom_horac_selected"
                    android:onClick="dataPickerDialogHoraC" />

                <EditText
                    android:id="@+id/etHoraC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:enabled="true"
                    android:inputType="textPersonName"
                    android:hint="@string/hora_de_cierre"
                    android:clickable="false"/>

            </LinearLayout>

            <Button
                android:id="@+id/bAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_button"
                android:text="@string/registrar_actividad" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>