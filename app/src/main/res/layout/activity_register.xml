<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.RegisterActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="@string/action_register"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etDni"
                android:layout_width="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:hint="@string/etDni"
                android:inputType="textPersonName"
                android:maxLength="9"
                android:textSize="18sp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_dni_selected"
                android:background="@drawable/custom_edit_text"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:ems="10"
                android:hint="@string/etNombre"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_name_selected"
                android:background="@drawable/custom_edit_text"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:ems="10"
                android:hint="@string/etApellidos"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_name_selected"
                android:background="@drawable/custom_edit_text"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                />

            <EditText
                android:id="@+id/etYear"
                android:layout_width="match_parent"
                android:ems="10"
                android:hint="@string/etFecha_de_nacimiento"
                android:inputType="date"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_date_selector"
                android:background="@drawable/custom_edit_text"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"

                />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:ems="10"
                android:hint="@string/etUserName"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_user_selected"
                android:background="@drawable/custom_edit_text"
                android:layout_height="45dp"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                />

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="@string/etPwd"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_pwd_selected"
                android:background="@drawable/custom_edit_text"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                />

            <EditText
                android:id="@+id/etCfnPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="@string/etRepeatPwd"
                android:ems="10"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:enabled="true"
                android:drawableStart="@drawable/custom_pwd_repeat_selected"
                android:background="@drawable/custom_edit_text"
                android:paddingStart="10dp"
                android:drawablePadding="12dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                />

            <Button
                android:id="@+id/bRegsiter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_button"
                android:onClick="register"
                android:text="@string/action_register" />

            <Button
                android:id="@+id/bCreateGymAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_button"
                android:onClick="bCreateGymAccount"
                android:text="@string/onAcctionCreateGymAccount" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>