<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data.RegisterActivity"
    android:background="@drawable/wallpaper_grade">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/action_register"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bRegsiter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etDni"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/custom_dni_selected"
                android:drawablePadding="12dp"
                android:ems="10"
                android:enabled="true"
                android:hint="@string/etDni"
                android:inputType="textPersonName"
                android:maxLength="9"
                android:paddingStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/custom_name_selected"
                android:drawablePadding="12dp"
                android:ems="10"
                android:enabled="true"
                android:hint="@string/etNombre"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/custom_name_selected"
                android:drawablePadding="12dp"
                android:ems="10"
                android:enabled="true"
                android:hint="@string/etApellidos"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etYear"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/custom_date_selector"
                android:drawablePadding="12dp"
                android:ems="10"
                android:enabled="true"
                android:hint="@string/etFecha_de_nacimiento"
                android:inputType="date"
                android:paddingStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/custom_user_selected"
                android:drawablePadding="12dp"
                android:ems="10"
                android:enabled="true"
                android:hint="@string/correo"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/custom_pwd_selected"
                android:drawablePadding="12dp"
                android:ems="10"
                android:enabled="true"
                android:hint="@string/etPwd"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etCfnPwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/custom_pwd_repeat_selected"
                android:drawablePadding="12dp"
                android:ems="10"
                android:enabled="true"
                android:hint="@string/etRepeatPwd"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:textColor="@android:color/darker_gray"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bRegsiter"
        android:layout_width="137dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_button"
        android:onClick="register"
        android:text="@string/action_register"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bCreateGymAccount" />

    <Button
        android:id="@+id/bCreateGymAccount"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_button"
        android:onClick="bCreateGymAccount"
        android:text="@string/onAcctionCreateGymAccount"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>